@using Maylzam_App_.Model
@model AutomMechanic



    <form class="row" asp-action="Add">
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>AutoMechanic Add</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">AutoMechanic Add</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-5">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">General</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="inputName">Name</label>
                            <input type="text" id="inputName" class="form-control" asp-for="Name">
                        </div>
                        <div class="form-group">
                            <label for="inputName">Emali</label>
                            <input type="text" id="inputName" class="form-control" asp-for="Email">
                        </div>
                        <div class="form-group">
                            <label for="inputName">Phone</label>
                            <input type="text" id="inputName" class="form-control" asp-for="Phone">
                        </div>

                        <div class="form-group">
                            <label for="inputDescription">Password</label>
                            <textarea id="inputDescription" class="form-control" asp-for="Password"></textarea>
                        </div>
                       
                        <div class="form-group">
                            <label for="inputClientCompany">Client Company</label>
                            <input type="text" id="inputClientCompany" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="inputProjectLeader">Project Leader</label>
                            <input type="text" id="inputProjectLeader" class="form-control">
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>




                <div class="col-md-5">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">budget</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                        <div class="form-group">
                            <label for="inputStatus">Is Active</label>
                            <select id="inputStatus" class="form-control custom-select" asp-for="IsActive">
                                <option selected disabled>Select one</option>
                                <option>false</option>
                                <option>true</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="inputspentbudget">total amount spent</label>
                            <input type="number" id="inputspentbudget" class="form-control">
                        </div>
