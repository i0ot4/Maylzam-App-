 
@model Report



<form class="row" asp-action="Add">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Add Report</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">TaxiDriver Add</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>


        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-5">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">General</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputName">Trip Id</label>
                                <input type="text" id="inputName" class="form-control" asp-for="TripId">
                            </div>
                            <div class="form-group">
                                <label for="inputName">Customer Id</label>
                                <input type="text" id="inputName" class="form-control" asp-for="CustomerId">
                            </div>

                            <div class="form-group">
                                <label for="inputName">Driver Id</label>
                                <input type="text" id="inputName" class="form-control" asp-for="DriverId">
                            </div>

                            <div class="form-group">
                                <label for="inputName">Type<label>
                                    <select id="inputStatus" class="form-control custom-select" asp-for="Type">
                                        <option selected disabled>Select one</option>
                                        <option>سرعة بخطر</option>
                                        <option>غير ملتزم بقواعد المرور</option>
                                        <option>التاخير</option>
                                        <option>لم يصل الى موقعي</option>
                                        <option>غير موجود</option>
                                        <option>شيء اخر</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                <label for="inputDescription">Description</label>
                                    <textarea id="inputDescription" class="form-control" asp-for="Description"></textarea>
                                </div>

                            <div class="form-group">
                                <label for="inputName">Status</label>
                                    <select id="inputStatus" class="form-control custom-select" asp-for="Status">
                                        <option selected disabled>Select one</option>
                                        <option>Read</option>
                                        <option>Unread</option>
                                    </select>
                            </div>

                            <div class="form-group">
                                <label for="inputClientCompany">Client Company</label>
                                <input type="text" id="inputClientCompany" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="inputProjectLeader">Project Leader</label>
                                <input type="text" id="inputProjectLeader" class="form-control">
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>




                <div class="col-md-5">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">budget</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputStatus">Is Active</label>
                                <select id="inputStatus" class="form-control custom-select" asp-for="IsActive">
                                    <option selected disabled>Select one</option>
                                    <option>false</option>
                                    <option>true</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="inputspentbudget">total amount spent</label>
                                <input type="number" id="inputspentbudget" class="form-control">
                            </div>
                            @*<div class="form-group">
                            <label for="inputestimatedduration">Personal Photo</label>
                            <video id="videoElement" width="400" height="300"></video>
                            <button id="captureButton">Take a photo
                            </button>
                            <canvas id="canvasElement" width="400" height="300"></canvas>
                            <input type="file" name="imageFile" />
                            <input type="submit" value="رفع الصورة" />
                            </div>*@
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <div class="row">
                <div class="col-10">
                    <a href="#" class="btn btn-secondary">Cancel</a>
                    <input type="submit" value="Create TaxiDriver" class="btn btn-success float-right">
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
</form>



