@model TaxiDriverVechicle



<form class="row" asp-action="Add" enctype="multipart/form-data">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Add New Vechicle</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">TaxiDriver Dashboard</a></li>
                            <li class="breadcrumb-item active">New Vechicle</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>


        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-5">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">General</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputName" asp-for="licensePlateNumber"></label>
                                <div class=" input-group">
                                    @*<select asp-for="licensePlateNumber">
                                        @for (int x = 27; x >=1 ; x--)
                                        {
                                            <option selected>@x</option>
                                        }
                                    </select>*@
                                    <input type="text" id="inputName" class="form-control" asp-for="licensePlateNumber">
                                </div>
                                <span class="text-danger" asp-validation-for="licensePlateNumber"></span>
                            </div>
                            <div class="form-group">
                                <label for="inputName" asp-for="Type"></label>
                                <input type="text" id="inputName" class="form-control" asp-for="Type">
                                <span class="text-danger" asp-validation-for="Type"></span>
                            </div>
                            <div class="form-group">
                                <label for="inputName" asp-for="Model"></label>
                                <input type="text" id="inputName" class="form-control" asp-for="Model">
                                <span class="text-danger" asp-validation-for="Model"></span>
                            </div>
                            <div class="form-group">
                                <label for="inputName" asp-for="vehicleLicenseCardImage"></label>
                                <input type="file" name="uploadvehicleLicenseCardImage" class="form-control" asp-for="vehicleLicenseCardImage">
                                <span class="text-danger" asp-validation-for="vehicleLicenseCardImage"></span>
                            </div>

                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>




                <div class="col-md-5">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">budget</h3>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="inputStatus">Is Active</label>
                                    <select id="inputStatus" class="form-control custom-select" asp-for="IsActive">
                                        <option value="false">false</option>
                                        <option selected value="true">true</option>
                                    </select>
                                </div>


                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <div class="row">
                    <div class="col-10">
                        <a href="#" class="btn btn-secondary">Cancel</a>
                        <input type="submit" value="Create" class="btn btn-success float-right">
                    </div>
                </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
</form>



