@using Maylzam_App_.Model
@model Vechicle


<form class="row" asp-action="Edit">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>TaxiDriver Edit</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">TaxiDriver Dashboard</a></li>
                            <li class="breadcrumb-item active">Edit Vechicle</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-5">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">General</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <input type="hidden" asp-for="Id">
                        <div asp-validation-summary="All"></div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputName">Driver Id</label>
                                <span class="text-danger" asp-validation-for="DriverId"></span>
                                <input type="text" id="inputName" class="form-control" asp-for="DriverId">
                            </div>
                            <div class="form-group">
                                <label for="inputName">Vechicle Type</label>
                                <span class="text-danger" asp-validation-for="Type"></span>
                                <input type="text" id="inputName" class="form-control" asp-for="Type">
                            </div>
                            <div class="form-group">
                                <label for="inputName">Vechicle Model</label>
                                <span class="text-danger" asp-validation-for="Model"></span>
                                <input type="text" id="inputName" class="form-control" asp-for="Model">
                            </div>

                            <div class="form-group">
                                <label for="inputDescription">license plate number</label>
                                <span class="text-danger" asp-validation-for="VNumber"></span>
                                <textarea id="inputDescription" class="form-control" asp-for="VNumber"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="inputClientCompany">Date of Created</label>
                                <span class="text-danger" asp-validation-for="Created_At"></span>
                                <input type="text" id="inputClientCompany" asp-for="Created_At" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="inputProjectLeader">Project Leader</label>
                                <input type="text" id="inputProjectLeader" class="form-control">
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>




                <div class="col-md-5">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">budget</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputStatus">Is Active</label>
                                <select id="inputStatus" class="form-control custom-select" asp-for="IsActive">
                                    <option selected disabled>Select one</option>
                                    <option>false</option>
                                    <option>true</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <div class="row">
                <div class="col-10">
                    <a href="#" class="btn btn-secondary">Cancel</a>
                    <input type="submit" value="ُEdite" class="btn btn-success float-right">
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
</form>