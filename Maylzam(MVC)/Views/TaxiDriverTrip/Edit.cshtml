 
@model TaxiDriverTrip


<form class="row" asp-action="Edit">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>TaxiDriver Edit</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">TaxiDriver Edit</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-5">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">General</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <input type="hidden" asp-for="Id">
                        <div asp-validation-summary="All"></div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputName">Customer Name</label>
                                <span class="text-danger" asp-validation-for="CustomerName"></span>
                                <input type="text" id="inputName" class="form-control" asp-for="CustomerName">
                            </div>
                            <div class="form-group">
                                <label for="inputName">Customer Phone</label>
                                <span class="text-danger" asp-validation-for="CustomerPhone"></span>
                                <input type="text" id="inputName" class="form-control" asp-for="CustomerPhone">
                            </div>
                            <div class="form-group">
                                <label for="inputName">Current Location</label>
                                <span class="text-danger" asp-validation-for="CurrentLocation"></span>
                                <input type="text" id="inputName" class="form-control" asp-for="CurrentLocation">
                            </div>

                            <div class="form-group">
                                <label for="inputDescription">End Location</label>
                                <span class="text-danger" asp-validation-for="EndLocation"></span>
                                <textarea id="inputDescription" class="form-control" asp-for="EndLocation"></textarea>
                            </div>
                            

                            <div class="form-group">
                                <label for="inputDescription">Description</label>
                                <span class="text-danger" asp-validation-for="Description"></span>
                                <textarea id="inputDescription" class="form-control" asp-for="Description"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="inputClientCompany">Date of Created</label>
                                <span class="text-danger" asp-validation-for="Created_At"></span>
                                <input type="text" id="inputClientCompany" asp-for="Created_At" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="inputProjectLeader">Project Leader</label>
                                <input type="text" id="inputProjectLeader" class="form-control">
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>




                <div class="col-md-5">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">budget</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputStatus">Is Active</label>
                                <select id="inputStatus" class="form-control custom-select" asp-for="IsActive">
                                    <option selected disabled>Select one</option>
                                    <option>false</option>
                                    <option>true</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="inputspentbudget">total amount spent</label>
                                <input type="number" id="inputspentbudget" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="inputestimatedduration">estimated project duration</label>
                                <input type="number" id="inputestimatedduration" class="form-control">
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <div class="row">
                <div class="col-10">
                    <a href="#" class="btn btn-secondary">Cancel</a>
                    <input type="submit" value="ُEdite" class="btn btn-success float-right">
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
</form>